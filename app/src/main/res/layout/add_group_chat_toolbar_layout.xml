<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_new_group_chat_toolbar">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTitleTextAddNewGroupChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select contacts"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            android:layout_gravity="left|center"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputSearchAddNewGroupChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search..."
            android:singleLine="true"
            android:layout_marginRight="64dp"
            android:textColorHint="?android:textColorPrimaryInverseDisableOnly"
            android:layout_gravity="left|center"
            android:backgroundTint="?android:colorPrimary"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/searchAddNewGroupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search"
                android:tint="@color/white"
                android:layout_gravity="center"
                android:padding="8dp"
                android:rotation="90"/>

            <ImageButton
                android:id="@+id/closeSearchAddNewGroupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:tint="@color/white"
                android:rotation="90"
                android:layout_gravity="center"
                android:padding="8dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/buttonAddGroupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_okey"
                android:tint="@color/white"
                android:layout_gravity="right|center"
                android:padding="8dp"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

    </FrameLayout>
</android.support.v7.widget.Toolbar>