<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_group_chat_profile"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mradmin.androidnavapp.Activities.GroupChatProfileActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="group info" />

    </android.support.v4.widget.NestedScrollView>

    <View
        android:id="@+id/mediumView"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/nestedScroll"
        android:background="?android:colorPrimary"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewGroupProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mediumView"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
