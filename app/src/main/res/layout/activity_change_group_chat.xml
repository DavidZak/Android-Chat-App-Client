<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.mradmin.androidnavapp.Activities.ChangeGroupChatActivity"
    android:id="@+id/scroll_view_sign_up"
    android:orientation="vertical"
    android:clipToPadding="false">

    <include layout="@layout/change_group_chat_name_app_bar" android:id="@+id/change_group_chat_name_app_bar"/>

    <LinearLayout
        android:id="@+id/linearLayoutBossNewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutGroupChatNewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="?android:textColorTertiary">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputGroupChatNewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:hint="Enter new name..."
                android:backgroundTint="?android:textColorTertiary" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</LinearLayout>
